apiVersion: kubeadm.k8s.io/v1alpha3
kind: ClusterConfiguration
kubernetesVersion: {{ kubernetes_version }}
apiServerCertSANs:
- "{{ vip }}"
controlPlaneEndpoint: "{{ vip }}:6443"
etcd:
  local:
    extraArgs:
      name: "{{ master1_hostname }}"
      listen-client-urls: "https://127.0.0.1:2379,https://{{ master1_ip }}:2379"
      advertise-client-urls: "https://{{ master1_ip }}:2379"
      listen-peer-urls: "https://{{ master1_ip }}:2380"
      initial-advertise-peer-urls: "https://{{ master1_ip }}:2380"
      initial-cluster: "{{ master1_hostname }}=https://{{ master1_ip }}:2380"
    serverCertSANs:
      - {{ master1_hostname }}
      - {{ master1_ip }}
    peerCertSANs:
      - {{ master1_hostname }}
      - {{ master1_ip }}
networking:
    # This CIDR is a Calico default. Substitute or remove for your CNI provider.
    podSubnet: "{{ pod_subnet }}"
